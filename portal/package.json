{
  "name": "blvckshell-portal",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:direct": "node -e \"require('dotenv').config({path:require('path').resolve(process.cwd(),'../.env')}); process.env.DATABASE_URL=process.env.DIRECT_URL; require('child_process').execSync('npx prisma migrate deploy', {stdio:'inherit', env:process.env})\"",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:verify": "prisma migrate diff --from-config-datasource --to-schema prisma/schema.prisma --exit-code",
    "test": "vitest",
    "test:unit:pure": "vitest run src/__tests__/unit/state-machine/pure-transitions.test.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:load": "k6 run src/__tests__/load/mixed-workload.js",
    "test:load:worker": "k6 run src/__tests__/load/worker-workflow.js",
    "test:load:peak": "k6 run src/__tests__/load/peak-load.js",
    "test:all": "npm run test && npm run test:e2e"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@supabase/supabase-js": "^2.95.3",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.24",
    "bcryptjs": "^3.0.3",
    "framer-motion": "^11.11.17",
    "next": "^14.2.35",
    "next-auth": "^5.0.0-beta.30",
    "pdfkit": "^0.17.2",
    "pg": "^8.18.0",
    "postcss": "^8.5.6",
    "prisma": "^7.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^25.2.3",
    "@types/pdfkit": "^0.17.5",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^16.4.5",
    "tsx": "^4.21.0",
    "vitest": "^2.1.8"
  }
}
